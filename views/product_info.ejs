	}
	
	function pop_add() {		
		let submit_args = '';
		submit_args += commonFunc.makeArgs("item", $("#item").val());
		submit_args += commonFunc.makeArgs("color", $("#color").val());
		submit_args += commonFunc.makeArgs("code", $("#code").val());
		const ret = commonFunc.postArgs("/product_info_add", submit_args);
		if(ret == 'y'){
			alert('등록이 완료 되었습니다.');
			location.href='/product_info';
		}
	}
	
	function update(no) {		
		let submit_args = '';
			submit_args += commonFunc.makeArgs("no", all_no);
			submit_args += commonFunc.makeArgs("item", $("#update_item").val());
			submit_args += commonFunc.makeArgs("color", $("#update_color").val());
			submit_args += commonFunc.makeArgs("code", $("#update_code").val());
			const ret = commonFunc.postArgs("/product_info_update", submit_args);
			if(ret == 'y'){
				alert('수정이 완료 되었습니다.');
				location.href='/product_info';
			}
	
	}
	
	
	function update_select(no) {
		all_no = no;
		let submit_args = '';
			submit_args += commonFunc.makeArgs("no", no);
			const ret = commonFunc.postArgs("/product_info_update_select", submit_args);
			$('#update_item').attr('value',ret[0].item);
			$('#update_color').attr('value',ret[0].color);
			$('#update_code').attr('value',ret[0].code);
	}
	
	var check_list = '';
	  $('#chAll').on('click', function() {
