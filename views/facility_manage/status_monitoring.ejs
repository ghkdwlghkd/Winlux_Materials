<script>
	//     INSERT INTO M4_DG.machine_info (id,state,UpdateTime)VALUES ('machine01','on',now());
	let wedgesArray = ['../img/Wedges.gif', '../img/Wedges_off.gif'];
	async function refreshWedges() {
		const chart_el = document.getElementById('chart-views');
		const now_date_time = new Date().getTime();
		const res = await fetch('/machine/state');
		const res_json = await res.json();

		if (res_json['M_machine_data']) {
			removeAllchild(chart_el);
			res_json['M_machine_data'].forEach((v) => {
				let state = v.state;
				let state_img = '../img/Wedges_disconnected.gif';
				const state_time = new Date(v.updatetime).getTime();
				if (Math.abs(now_date_time - state_time) <= 10000) {
					if (state == 'on') {
						state_img = '../img/Wedges.gif';
					} else if (state == 'off') {
						state_img = '../img/Wedges_off.gif';
					}
				}
				console.log(state);
				chart_el.insertAdjacentHTML(
					'beforeend',
					`
                              <div class="col-xl-2">
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <i class="fas fa-chart-pie me-1"></i>
                                        ${v.id}
                                    </div>
                                    <div class="card-body"><canvas id="myPieChart" width="100%;" height="40"></canvas></div>
										<img id="test_wedges" src="${state_img}"/>
                              		</div>
                           		</div>`
				);
			});
		}
	}
	function removeAllchild(div) {
		while (div.hasChildNodes()) {
			div.removeChild(div.firstChild);
		}
	}

	$(document).ready(function () {
		refreshWedges();
		setInterval(refreshWedges, 5000);
	});

	document.getElementById('status_monitoring').style.background = 'khaki';
</script>