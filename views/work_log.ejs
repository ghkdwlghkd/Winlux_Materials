<script>

	
	
	function save_today(){
		let submit_args = '';
			submit_args += commonFunc.makeArgs("dateTime", $(`#dateTime`).val());
			submit_args += commonFunc.makeArgs("user1", $(`#user1`).val());
			submit_args += commonFunc.makeArgs("user2", $(`#user2`).val());
			submit_args += commonFunc.makeArgs("user3", $(`#user3`).val());
			submit_args += commonFunc.makeArgs("am_user", $(`#am_user`).val());
			submit_args += commonFunc.makeArgs("pm_user", $(`#pm_user`).val());
			const ret = commonFunc.postArgs("/save_today", submit_args);
			if(ret == 'y'){
				location.href='/work_log/'+$('#dateTime').val();
			}
		}

	
	function am_button_chek(no){
		let submit_args = '';
			submit_args += commonFunc.makeArgs("dateTime", $(`#dateTime`).val());
			submit_args += commonFunc.makeArgs("machine_no", no-100);
			submit_args += commonFunc.makeArgs("work_time", $(`#am_op_${no}`).val());
			submit_args += commonFunc.makeArgs("break", $(`#am_op_${no+100}`).val());
			const ret = commonFunc.postArgs("/am_button_chek", submit_args);
			if(ret == 'y'){
				location.href='/work_log/'+$('#dateTime').val();
			}
	}
	
	function pm_button_chek(no){
		let submit_args = '';
			submit_args += commonFunc.makeArgs("dateTime", $(`#dateTime`).val());
			submit_args += commonFunc.makeArgs("machine_no", no-100);
			submit_args += commonFunc.makeArgs("work_time", $(`#pm_op_${no}`).val());
			submit_args += commonFunc.makeArgs("break", $(`#pm_op_${no+100}`).val());
			const ret = commonFunc.postArgs("/pm_button_chek", submit_args);
			if(ret == 'y'){
				location.href='/work_log/'+$('#dateTime').val();
			}
	}
	
	function work_button_chek(no){
		
		
		var select_item = document.getElementById(`work_op_item_${no}`);
		var select_item_Value = select_item.value;
		
		 var select_color = document.getElementById(`work_op_color_${no}`);
		 var select_color_Value = select_color.value;
		
		let submit_args = '';
			submit_args += commonFunc.makeArgs("dateTime", $(`#dateTime`).val());
			submit_args += commonFunc.makeArgs("machine_no", no-100);
			submit_args += commonFunc.makeArgs("work_time", select_item_Value);
			submit_args += commonFunc.makeArgs("color", select_color_Value);
			submit_args += commonFunc.makeArgs("break", $(`#work_op_${no+200}`).val());
			const ret = commonFunc.postArgs("/work_button_chek", submit_args);
			if(ret == 'y'){
				location.href='/work_log/'+$('#dateTime').val();
			}
	}
	
	function examination_add(no){
		let submit_args = '';
			submit_args += commonFunc.makeArgs("dateTime", $(`#dateTime`).val());
			submit_args += commonFunc.makeArgs("machine_no", no-100);
			submit_args += commonFunc.makeArgs("work_time", $(`#work_op_${no}`).val());
			submit_args += commonFunc.makeArgs("color", $(`#work_op_${no+100}`).val());
			submit_args += commonFunc.makeArgs("break", $(`#work_op_${no+200}`).val());
			const ret = commonFunc.postArgs("/examination_add", submit_args);
			if(ret == 'y'){
				alert('등록 완료');
				location.href='/work_log/'+$('#dateTime').val();
			}
	}
	
	
	function date_select(){
		location.href='/work_log/'+$('#dateTime').val();
		
	}

	
	function selectNum(no){
		
		var langSelect = document.getElementById(`work_op_item_${no}`);
		// select element에서 선택된 option의 value가 저장된다.
		var selectValue = langSelect.options[langSelect.selectedIndex].value;
		let submit_args = '';
			submit_args += commonFunc.makeArgs("item", selectValue);
			const ret = commonFunc.postArgs("/selectNum", submit_args);
		document.getElementById(`work_op_color_${no}`).innerHTML=""
		for(var i = 0; i<ret.length; i++){
			$(`#work_op_color_${no}`).append(`
				<option value="${ret[i].color}">${ret[i].color}</option>
			`)
			
		}
		
	}
	
	
	document.getElementById('work_log').style.background='khaki';
</script>