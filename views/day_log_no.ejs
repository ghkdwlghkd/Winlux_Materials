<script>

    const myIdElement = document.getElementById(`tr_id<%=page%>`).style.backgroundColor = "#ebfffc";

	function day_log_save(no,item,code,color){
        alert($(`#manufacturing_qty_${no}`).val())
		//var oqty_arr = [];
		var oqty_sum = 0;
		var o_qty_old = $(`#o_qty_${no}`).val();
		var oqty = $(`#o_qty_${no}`).val().trim();
		
			let submit_args = '';
			submit_args += commonFunc.makeArgs("no", no);
			submit_args += commonFunc.makeArgs("item", item);
			submit_args += commonFunc.makeArgs("code", code);
			submit_args += commonFunc.makeArgs("color", color);
            submit_args += commonFunc.makeArgs("option_no", $(`#option_no_${no}`).val());
            submit_args += commonFunc.makeArgs("option_machine_no", $(`#option_machine_no_${no}`).val());
			submit_args += commonFunc.makeArgs("o_qty_old", $(`#o_qty_${no}`).val());
			submit_args += commonFunc.makeArgs("oqty_sum", oqty_sum);
			submit_args += commonFunc.makeArgs("x_qty", $(`#x_qty_${no}`).val());
			submit_args += commonFunc.makeArgs("etc2", $(`#etc2_${no}`).val());
			submit_args += commonFunc.makeArgs("day_log_time", $(`#dateTime`).val());
            submit_args += commonFunc.makeArgs("manufacturing_qty", $(`#manufacturing_qty_${no}`).val());
			const ret = commonFunc.postArgs("/day_log_save", submit_args);
			if(ret == 'y'){
				alert('등록 완료');
				location.href='/day_log/<%=page%>';
			}

            if(ret == 'n'){
				alert('수량을 확인하여 주세요.');
				location.href='/day_log';
			}

	}
	
	
	
	
	function date_select(){
		location.href='/day_log/'+$('#dateTime').val();
		
	}
	
    function tr_click(i,row,no){
        location.href='/day_log/'+no;
    }
    
    function qr_insert(val) {
        return new Promise(function(resolve, reject) {
	  
	  // QR 생성
   var qrcode = new QRCode(document.createElement('div'), {
		text: val+"",
		width: 600,
		height: 600,
		colorDark: '#000000',
		colorLight: '#ffffff',
		correctLevel: QRCode.CorrectLevel.H
	  	});
		// QR 코드를 새로운 div 요소에 추가
		var qrWrapper = document.createElement('div');
		qrWrapper.appendChild(qrcode._el);

		// QR 코드를 화면에 추가
		document.getElementById('qrcode').appendChild(qrWrapper);
    setTimeout(function() {
      resolve();
    }, 500); // 0.5 초 후 다음 함수 실행
  });
}


	// 윈도우 프린트 실행
    function printPage() {
	 var initBody;
	 window.onbeforeprint = function(){
	  initBody = document.body.innerHTML;
	  document.body.innerHTML =  document.getElementById('qrcode').innerHTML;
	 };
	 window.onafterprint = function(){
	  document.body.innerHTML = initBody;
	 };
	 window.print();
	document.getElementById('qrcode').innerHTML = '';
	 return false;	
}




	document.getElementById('day_log').style.background='khaki';
</script>